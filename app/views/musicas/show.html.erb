<fieldset style="width: 70%">
	<legend>Minha Musica</legend>
	<p>
	  <b>Nome:</b>
	  <%= @musica.nome %>
	</p>
	<p>
	  <b>Artista:</b>
	  <%= @musica.artista %>
	</p>
